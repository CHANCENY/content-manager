{% if content %}

    <div class="field">
        <div class="node-link field-{{ definition.name|replace({'_':'-'}) }} field--{{ definition.name|replace({'_':'-'}) }}">
            {% if definition.label %}
                <strong class="field-label">{{ definition.label }}</strong>
            {% endif %}
            <a href="{{ content.url }}">{{ content.name }}</a>
        </div>

    </div>

{% endif %}