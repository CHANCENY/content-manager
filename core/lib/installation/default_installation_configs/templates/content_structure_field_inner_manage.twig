{% extends 'default.view.admin_base' %}

{% block body %}

    {% if content %}
    <div class="db-form-container">
        <h2>Manage Fields for Content Type: {{ content.name }}</h2>
        <a href="/admin/structure/content-type/{{ content.machine_name }}/field/{{ parent_field }}/add/inner/new" >+ Create a new field</a>
        <table class="table table-stripped">
            <thead class="table-light">
            <tr>
                <th>Label</th>
                <th>Machine Name</th>
                <th>Field Type</th>
                <th>Operations</th>
            </tr>
            </thead>
            <tbody>
            {% for field in fields %}
            <tr>
                <td>{{ field.label }}</td>
                <td>{{ field.name }}</td>
                <td>{{ field.type }}</td>
                <td>
                    <a href="/admin/structure/content-type/{{  content.machine_name}}/field/{{ parent_field }}/{{ field.name }}/inner/edit" class="edit-button">Edit</a>
                    <a href="/admin/structure/content-type/{{ content.machine_name }}/field/{{ parent_field }}/{{ field.name }}/inner/delete" class="btn delete-btn">Delete</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

{% endblock %}