{% extends 'default.view.admin_base' %}

{% block body %}

    <div class="db-form-container">
        {% if contents %}
            <table class="table table-stripped table-hover">
                <thead class="table-light">
                <tr>
                    <th>{{ "Content Type"|t }}</th>
                </tr>
                </thead>
                <tbody>
                {% for content in contents %}
                    <tr>
                        <td>
                            <a href="/node/add/{{ content.machine_name }}">{{ content.name }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}

            <div class="no-content-types-found">
                {{ "No content types found. create content type first."|t }}
            </div>

        {% endif %}
    </div>

{% endblock %}