{% extends 'default.view.admin_base' %}

{% block body %}

    <div class="db-form-container">
        <h2>{{ "Content Types"|t }}</h2>
        <a href="/admin/structure/types/new" class="create-btn">+ {{ "Create Content Type"|t }}</a>
        <table class="table table-stripped">
            <thead class="table-light">
            <tr>
                <th>{{ "Name"|t }}</th>
                <th>{{ "Description"|t }}</th>
                <th>{{ "Created Date"|t }}</th>
                <th>{{ "Actions"|t }}</th>
            </tr>
            </thead>
            <tbody>
            {%  for item in items %}
            <tr>
                <td><a href="/admin/structure/content-type/{{ item.machine_name }}/manage">{{ item.name }}</a></td>
                <td>{{ item.description }}</td>
                <td>{{ item.created }}</td>
                <td class="actions">
                    <a href="/admin/structure/content-type/{{ item.machine_name }}/edit" class="btn edit-btn">{{ "Edit"|t }}</a>
                    <a href="/admin/structure/content-type/{{ item.machine_name }}/delete" class="btn delete-btn">{{ "Delete"|t }}</a>
                </td>
            </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
