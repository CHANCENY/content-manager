{% extends 'default.view.admin_base' %}

{% block body %}
    <div class="db-form-container">
        <h2 class="mb-lg-5">{{ "Content"|t }}</h2>
        <div class="mt-4 mb-4">
            <a href="/node/add">+ {{ "Create Content"|t }}</a>
        </div>
        {% include 'default.view.filter.form' ignore missing  %}
        <!-- Users Table -->
        <div class="">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>{{ "Title"|t }}</th>
                    <th>{{ "Type"|t }}</th>
                    <th>{{ "Author"|t }}</th>
                    <th>{{ "Updated on"|t }}</th>
                    <th>{{ "Created on"|t }}</th>
                    <th>{{ "Status"|t }}</th>
                    <th>{{ "Actions"|t }}</th>
                </tr>
                </thead>
                <tbody>
                {% if nodes is not empty %}
                {% for node in nodes %}
                    <tr>
                        <td>{{ node.nid }}</td>
                        <td><a href="/node/{{ node.nid }}">{{ node.title }}</a></td>
                        <td>{{ node.bundle }}</td>
                        <td>{{ node.getOwner.name }}</td>
                        <td>{{ node.updated }}</td>
                        <td>{{ node.created }}</td>
                        <td>
                            {% if node.status %}
                                <span class="">{{ "Active"|t }}</span>
                            {% else %}
                                <span class="">{{ "Inactive"|t }}</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="/node/{{ node.nid }}/edit" class="">{{ "Edit"|t }}</a>
                            <a href="/node/{{ node.nid }}/delete" class="">{{ "Delete"|t }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                {% else %}
                    <tfoot>
                    <tr>
                        <td colspan="9"><p class="text-white-0 text-center p-5">{{ "No content created yet."|t }}</p></td>
                    </tr>
                    </tfoot>
                {% endif %}
            </table>
        </div>

    </div>
{% endblock %}