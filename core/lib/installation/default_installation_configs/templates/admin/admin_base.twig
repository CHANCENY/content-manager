<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description }}">
    <meta name="robots" content="noindex, nofollow">
    <meta name="keywords" content="{{ page_keywords }}">
    {% if theme.admin.admin_assets_head is defined %}
        {% include (theme.admin.admin_assets_head) %}
    {% endif %}

    {% if theme.assets.head is defined %}

        {% if theme.assets.head is iterable %}

            {% for attachment in theme.assets.head %}

                {{ attachment }}

            {% endfor %}

        {% endif %}

    {% endif %}

</head>
<body>

{% if theme.admin.navigation is defined and theme.admin.navigation %}
    {% include (theme.admin.navigation) %}
{% endif %}

<div class="container main-content">
    {% block body %}{% endblock %}
</div>

{% if theme.admin.admin_assets_footer is defined and theme.admin.admin_assets_footer %}
    {% include (theme.admin.admin_assets_footer) %}
{% endif %}

{% if theme.assets.footer is defined %}

    {% if theme.assets.footer is iterable %}

        {% for attachment in theme.assets.footer %}

            {{ attachment }}

        {% endfor %}

    {% endif %}

{% endif %}

</body>
</html>
