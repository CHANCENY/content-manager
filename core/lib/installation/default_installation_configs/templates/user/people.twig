{% extends 'default.view.admin_base' %}

{% block body %}
    <div class="db-form-container">
        <h2 class="text-center mb-4">{{ "People"|t }}</h2>
        {% include 'default.view.filter.form' ignore missing  %}
        <!-- Users Table -->
        <div class="">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if users is not empty %}
                  {% for user in users %}
                <tr>
                    <td>{{ user.uid }}</td>
                    <td><a href="/user/{{ user.uid }}">{{ user.name }}</a></td>
                    <td>{{ user.mail }}</td>
                    {% set roles = user.getRoles() %}
                    <td>
                        {% for role in roles %}
                           <span>
                               {{ role.getRoleName() }}
                               <hr>
                           </span>

                        {% endfor %}
                    </td>
                    <td>
                        {% if user.status %}
                        <span class="">Active</span>
                        {% else %}
                            <span class="">Inactive</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="/user/{{ user.uid }}/edit" class="">Edit</a>
                        <a href="/user/{{ user.uid }}/delete" class="">Delete</a>
                    </td>
                </tr>
                   {% endfor %}
                </tbody>
                {% else %}
                  <tfoot>
                  <tr>
                      <td colspan="6"><p class="text-white-0 text-center p-5">Sorry no users created yet.</p></td>
                  </tr>
                  </tfoot>
                {% endif %}
            </table>
        </div>

    </div>
{% endblock %}