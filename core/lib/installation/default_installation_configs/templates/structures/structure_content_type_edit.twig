{% extends 'default.view.admin_base' %}

{% block body %}

    <div class="db-form-container">
        <h2>Content type ({{ content.name }}) Edit</h2>
        <p>Individual content types can have different fields, behaviors, and permissions assigned to them.</p>

        <form action="#" method="POST">
            <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required value="{{ content.name }}">
                <small>The human-readable name for this content type, displayed on the Content types page.</small>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3">{{ content.description }}</textarea>
                <small>Displays on the Content types page.</small>
            </div>

            <div class="sidebar">
                <details>
                    <summary>Publishing options</summary>
                    <p>Published, Promoted to front page, Create new revision</p>
                </details>

                <details>
                    <summary>Display settings</summary>
                    <p>Display author and date information</p>
                </details>

            </div>

            <div class="main-content">
                <button class="w-auto" type="submit">Save</button>
            </div>

            <div class="clearfix"></div>
        </form>
    </div>

{% endblock %}