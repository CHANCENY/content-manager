{
    "name": "simp/content-manager",
    "description": "This is quick kit for creating and managing contents",
    "type": "project",
    "require": {
        "symfony/http-foundation": "^7.2",
        "symfony/yaml": "^7.2",
        "symfony/var-dumper": "^7.2",
        "simp/streamwrapper": "^1.0",
        "phpfastcache/phpfastcache": "^9.2",
        "simp/forms": "^1.0",
        "simp/router": "^1.0",
        "twig/twig": "^3.0",
      "ext-pdo": "*",
        "google/apiclient": "^2.18",
        "league/oauth2-github": "^3.1",
        "simp/uploader": "^1.0",
        "simp/mail": "^1.0",
        "catfan/medoo": "^2.1",
      "ext-fileinfo": "*",
      "ext-readline": "*",
        "fakerphp/faker": "^1.24",
        "simp/translate": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Simp\\Core\\": "core/",
            "Simp\\Public\\Module\\": "public/module/",
            "Simp\\Public\\Theme\\": "public/theme/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "CHANCENY",
            "email": "nyasuluchance6@gmail.com"
        }
    ],
    "scripts": {
    "post-install-cmd": [
        "@php core/lib/installation/composer.php",
        "@php vendor/simp/translate/src/lang/lang.php"
    ],
    "post-update-cmd": [
        "@php core/lib/installation/composer.php",
        "@php vendor/simp/translate/src/lang/lang.php"
    ]
},
    "require-dev": {
        "rector/rector": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.75"
    }
}
